{
  "name": "2fa",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "2FA - OTP Generator using Cloudflare Workers",
  "scripts": {
    "deploy": "npm run build:client && node scripts/deploy.js",
    "deploy:git": "npm run build:client && node scripts/deploy.js --git",
    "deploy:package": "npm run build:client && node scripts/deploy.js --package",
    "deploy:dev": "npm run build:client && node scripts/deploy.js --env development",
    "deploy:direct": "npm run build:client && wrangler deploy",
    "dev": "wrangler dev",
    "dev:client": "cd client && npm run dev",
    "start": "wrangler dev",
    "build": "node scripts/build-release.js",
    "build:client": "cd client && npm run build",
    "build:minify": "node scripts/build-release.js --minify",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/cloudflare": "^10.22.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@eslint/js": "^9.18.0",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "esbuild": "^0.25.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "vitest": "^4.0.5",
    "wrangler": "^4.37.0"
  },
  "keywords": [
    "2fa",
    "otp",
    "totp",
    "cloudflare-workers",
    "authentication"
  ],
  "author": "wuzf",
  "license": "MIT"
}
